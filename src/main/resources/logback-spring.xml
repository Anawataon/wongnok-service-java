<configuration>
    <!-- Spring Externalized Properties -->
    <springProperty name="app.name" source="spring.application.name" defaultValue="default_application"/>

    <!-- Property -->
    <property name="log.ttb.pattern" value="%d{yyyy-MM-dd'T'HH:mm:ssXXX} ${app.name} %thread %level %logger [%X{span_id}] [%X{trace_id}] - %msg%n%throwable"/>

    <!-- Appenders -->
    <appender name="SYSTEM" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${log.ttb.pattern}</pattern>
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- Optional: add custom fields -->
            <customFields>{"service":"wongnok","env":"dev"}</customFields>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="SYSTEM"/>
    </root>
</configuration>